.container {
  position: relative;
  height: 100%;
}

.bg {
  width: 100%;
  height: 320rpx;
  background-color: aquamarine;
}

.product-content {
  margin-bottom: 220rpx;
}

.product-detail {
  margin: -75rpx auto;
  width: 90%;
  height: 200rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 7rpx 10rpx 6rpx rgb(185, 183, 183);
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.product-detail-item {
  height: 50%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
}

.detail-value {
  font-size: 37rpx;
  font-weight: 600;
  color: rgb(243, 120, 38);
}

.detail-label {
  font-size: 32rpx;
  color: #c9c9c9;
}

.apply-condition {
  width: 100%;
  margin-top: 160rpx;
}

.apply-condition-item {
  display: flex;
  align-items: center;
  width: 90%;
  margin: 45rpx auto;
}

.condition-image {
  width: 75rpx;
  height: 70rpx;
  margin-right: 50rpx;
}

.condition-word {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}
.condition-label {
  font-size: 39rpx;
  font-weight: 500;
}
.condition-value {
  font-size: 30rpx;
  color: #a8a8a8;
}

.notice {
  position: fixed;
  width: 100%;
  height: 100rpx;
  background-color: #ebebeb;
  padding: 20rpx;
  bottom: 120rpx;
}

.notice-word {
  font-size: 20rpx;
  color: #999999;
}

.apply-btn {
  position: fixed;
  width: 100%;
  height: 120rpx;
  font-size: 42rpx;
  font-weight: 550;
  text-align: center;
  line-height: 120rpx;
  background-color: crimson;
  color: #fff;
  bottom: 0;
}
