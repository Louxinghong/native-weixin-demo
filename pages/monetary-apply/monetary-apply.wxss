.container {
  position: relative;
  height: 100%;
}

.bg {
  width: 100%;
  height: 400rpx;
  background-color: aquamarine;
}

.product-detail {
  margin: -75rpx auto;
  width: 90%;
  height: 200rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 7rpx 10rpx 6rpx rgb(185, 183, 183);
}

.apply-btn {
  position: fixed;
  width: 100%;
  height: 120rpx;
  font-size: 42rpx;
  font-weight: 550;
  text-align: center;
  line-height: 120rpx;
  background-color: crimson;
  color: #fff;
  bottom: 0;
}
