.container {
  height: 100%;
}

.insurance {
  width: 90%;
  height: 500rpx;
  margin: 40rpx auto 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 40rpx 10rpx rgba(214, 214, 213, 0.75);
}

.insurance-image {
  width: 100%;
  height: 70%;
}

.insurance-detail {
  height: 30%;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx;
  align-items: center;
}

.insurance-name {
  margin-right: 20rpx;
}

.insurance-desc {
  font-size: 27rpx;
  color: #c9c9c9;
}

.loading {
  text-align: center;
  margin: 20rpx 0;
}
